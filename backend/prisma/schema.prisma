generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Kine {
  id             Int       @id @default(autoincrement())
  uid            String    @unique        // UID Firebase
  email          String    @unique
  firstName      String
  lastName       String
  birthDate      DateTime
  phone          String
  rpps           String    @unique
  adresseCabinet String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  patients       Patient[] // Relation 1-n
  programmes     Programme[]
}

model Patient {
  id         Int       @id @default(autoincrement())
  firstName  String
  lastName   String
  birthDate  DateTime
  phone      String
  email      String
  goals      String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  kineId     Int
  kine       Kine      @relation(fields: [kineId], references: [id])

  programmes Programme[]
}

model Programme {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  kineId      Int
  patientId   Int

  kine        Kine      @relation(fields: [kineId], references: [id])
  patient     Patient   @relation(fields: [patientId], references: [id])
}
